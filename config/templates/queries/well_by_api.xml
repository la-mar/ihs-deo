<criterias>
    <criteria type="group" groupId="" ignored="false">
        <domain>US</domain>
        <datatype>{data_type}</datatype>
        <attribute_group>Identification</attribute_group>
        <attribute>API/IC Number</attribute>
        <filter logic="include">
            <value id="0" ignored="false">
                <group_actual>
                    <operator logic="or">
                        <condition logic="equals">
                            <attribute>code</attribute>
                            <value_list>
                                <value>{api}</value>
                            </value_list>
                        </condition>
                        <condition logic="equals">
                            <attribute>ic</attribute>
                            <value_list>
                                <value>{api}</value>
                            </value_list>
                        </condition>
                    </operator>
                </group_actual>
                <group_display>API/IC Number = {api}</group_display>
            </value>
        </filter>
    </criteria>
</criterias>