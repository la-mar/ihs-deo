<criterias>
    <criteria type="group" groupId="" ignored="false">
        <domain>US</domain>
        <datatype>{data_type}</datatype>
        <attribute_group>Identification</attribute_group>
        <attribute>API Number</attribute>
        <filter logic="include">
            <value id="0" ignored="false">
                <group_actual>
                    <operator logic="and">
                        <condition logic="equals">
                            <attribute>code</attribute>
                                {value_list}
                        </condition>
                    </operator>
                </group_actual>
                <group_display>Production by API</group_display>
            </value>
        </filter>
    </criteria>
</criterias>